@{
    ViewData["Title"] = "Resultado del Quiz";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="fw-bold">Resultado del Quiz</h2>
                </div>
                <div class="card-body text-center">
                    <h3 class="text-dark fw-semibold">Basado en tus respuestas, sugerimos:</h3>
                    <h2 class="text-primary fw-bold">@ViewBag.Nombre</h2>
                    <div class="my-4">
                        <img src="@Url.Content("~/Images/" + ViewBag.RutaImagen)"
                             alt="Foto de @ViewBag.Nombre"
                             class="img-fluid rounded shadow-lg border"
                             style="max-width: 300px; height: auto;">
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="/Quiz" class="btn btn-outline-primary">Volver al Inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
    }
</style>